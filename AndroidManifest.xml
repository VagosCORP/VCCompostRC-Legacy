<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vagoscorp.vccompost.rc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />
    
    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">
        <activity
            android:name="com.vagoscorp.vccompost.rc.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vagoscorp.vccompost.rc.Set_Server"
            android:label="@string/title_activity_set_server"
            android:parentActivityName="com.vagoscorp.vccompost.rc.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Dialog" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vagoscorp.vccompost.rc.MainActivity" />
        </activity>
    </application>

</manifest>
